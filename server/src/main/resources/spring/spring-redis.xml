<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	<context:property-placeholder location="classpath:redis.properties" ignore-unresolvable="true" file-encoding="utf-8"/>
	
    <bean id="sessionRedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">
        <property name="maxIdle" value="${redis.session.maxIdle}"/>
        <property name="maxTotal" value="${redis.session.maxActive}"/>
        <property name="maxWaitMillis" value="${redis.session.maxWait}"/>
        <property name="testOnBorrow" value="${redis.session.testOnBorrow}"/>
        <property name="testOnReturn" value="${redis.session.testOnReturn}"/>
    </bean>
    
    <bean id="sessionRedisConnectionFactory" class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
        <property name="hostName" value="${redis.session.host}"/>
        <property name="port" value="${redis.session.port}"/>
        <property name="database" value="${redis.session.db}"/>
        <property name="password" value="${redis.session.pass}"/>
        <constructor-arg ref="sessionRedisPoolConfig"/>  
    </bean>
          
	<bean id="sessionRedisTemplate" class="org.springframework.data.redis.core.StringRedisTemplate">
		<property name="connectionFactory" ref="sessionRedisConnectionFactory"/>
	</bean>
</beans>